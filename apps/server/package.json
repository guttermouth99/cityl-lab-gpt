{
  "name": "@baito/server",
  "module": "src/server.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "check-types": "tsc -noEmit",
    "build:vercel": "bun build ./src/app.ts --outdir ./dist --target bun --minify --sourcemap",
    "dev": "bun --env-file=../../.env run --watch src/server.ts",
    "start": "bun run dist/server.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "devDependencies": {
    "@types/bun": "1.3.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@baito/typescript-config": "*"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "@baito/db": "*",
    "@baito/trpc": "*"
  }
}
