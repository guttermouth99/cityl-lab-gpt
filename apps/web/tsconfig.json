{
  "extends": "@baito/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@baito/ui/*": ["../../packages/ui/src/*"],
      "@baito/db/*": ["../../packages/db/src/*"],
      "@baito/shared/*": ["../../packages/shared/src/*"],
      "@baito/search/*": ["../../packages/search/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
