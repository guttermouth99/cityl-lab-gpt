{
  "name": "baito",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:vercel": "turbo run build:vercel",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "clean": "find . -name node_modules -o -name .next -o -name .turbo -o -name dist -type d -prune | xargs rm -rf",
    "check-types": "turbo run check-types",
    "dev:web": "turbo -F @baito/web dev",
    "dev:worker": "turbo -F @baito/worker dev",
    "db:seed": "turbo db:seed",
    "db:studio": "turbo db:studio",
    "db:generate": "turbo db:generate",
    "format": "prettier --write \"**/*.{ts,tsx,md,json,yml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json,yml}\"",
    "db:migrate": "turbo db:migrate",
    "preinstall": "npx only-allow bun",
    "postinstall": "bun db:generate"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-sort-imports": "^1.8.8",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "turbo": "^2.6.0",
    "eslint": "^9.30.0",
    "typescript": "5.9.3",
    "@baito/eslint-config": "*",
    "@baito/typescript-config": "*"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.1",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*",
    "tests/*"
  ]
}
