{
  "name": "baito",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:vercel": "turbo run build:vercel",
    "dev": "turbo run dev",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "clean": "find . -name node_modules -o -name .next -o -name .turbo -o -name dist -type d -prune | xargs rm -rf",
    "check-types": "turbo run check-types",
    "dev:web": "turbo -F @baito/web dev",
    "dev:worker": "turbo -F @baito/worker dev",
    "db:seed": "turbo db:seed",
    "db:studio": "turbo db:studio",
    "db:generate": "turbo db:generate",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "db:migrate": "turbo db:migrate",
    "preinstall": "npx only-allow bun",
    "postinstall": "bun db:generate",
    "prepare": "husky"
  },
  "devDependencies": {
    "@baito/typescript-config": "*",
    "@biomejs/biome": "2.3.11",
    "husky": "^9.1.7",
    "turbo": "^2.6.0",
    "typescript": "5.9.3",
    "ultracite": "7.0.11"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.1",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*",
    "tests/*"
  ]
}
